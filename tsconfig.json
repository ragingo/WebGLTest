{
  "compilerOptions": {
    "module": "UMD",
    "target": "es2017",
    //"declaration": true,
    "experimentalDecorators": true,
    "newLine": "CRLF",
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    // "outFile": "./dist/main.js"
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
